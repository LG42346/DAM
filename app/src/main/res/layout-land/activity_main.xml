<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/androidwallpaper"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/selectTeam"
        style="@android:style/Widget.Holo.Light.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@android:color/transparent"
        android:shadowColor="@color/white"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        android:text="@string/title"
        android:textAllCaps="false"
        android:textColor="@color/colorDarkRed"
        android:textColorHighlight="@color/colorPrimaryDark"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:id="@+id/os"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/macIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:contentDescription="@string/buttonMacDesc"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_mac" />

            <ImageButton
                android:id="@+id/winIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/buttonWinDesc"
                android:scaleType="centerInside"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_windows" />

            <ImageButton
                android:id="@+id/linuxIcon"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:contentDescription="@string/buttonLinuxDesc"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_linux" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/operand1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:text="@string/operand1"
                android:textColor="@color/colorDarkRed"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberOp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="0"
                android:background="@color/colorDarkRed"
                android:ems="10"
                android:hint="@string/numberZero"
                android:inputType="numberDecimal"
                android:text="@string/numberZero"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/operand2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/background_light"
                android:text="@string/operand2"
                android:textColor="@color/colorDarkRed"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/numberOp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="0"
                android:background="@color/colorDarkRed"
                android:ems="10"
                android:hint="@string/numberZero"
                android:inputType="numberDecimal"
                android:text="@string/numberZero"
                android:textColor="@android:color/background_light"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/btnLayout"
                style="?android:attr/buttonBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="top"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/plus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolPlus"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/minus"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolMinus"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/times"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolTimes"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/divide"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolDivide"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pow"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolPow"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/root"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/symbolRoot"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/setMem"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/setMem"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/getMem"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/colorWhite"
                    android:text="@string/getMem"
                    android:textColor="@color/colorDarkRed"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>